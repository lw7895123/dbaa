# 环境配置示例文件
# 复制此文件为 .env 并修改相应的配置值

# 环境设置
ENVIRONMENT=development

# MySQL数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=order_monitor
MYSQL_CHARSET=utf8mb4

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 监控配置
MONITOR_WORKER_COUNT=4
MONITOR_BATCH_SIZE=100

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs